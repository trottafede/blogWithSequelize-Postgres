<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Lomo Blog - Update your article</title>
    <link rel="stylesheet" href="/css/createArticle.css" />
    <link rel="stylesheet" href="/css/navbar.css" />
    <link rel="stylesheet" href="/css/footer.css" />
    <link rel="icon" type="image/x-icon" href="/img/favicon.ico" />

    <!-- Bootstrap css -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
    <!-- Fontawesome CDN -->
    <link
      rel="stylesheet"
      href="https://use.fontawesome.com/releases/v5.15.4/css/all.css"
      integrity="sha384-DyZ88mC6Up2uqS4h/KRgHuoeGwBcD4Ng9SiP4dIRy0EXTlnuz47vAwmeGwVChigm"
      crossorigin="anonymous"
    />
    <%- include("partials/googleAnalytics") %>
  </head>
  <body>
    <%- include("partials/navbar") %>
    <!--  -->
    <% if (singleBlog) { %>
    <div class="container mt-4 mb-4">
      <div class="row">
        <div class="col-lg-12">
          <form
            class="needs-validation"
            action="/admin/updateArticle/<%- singleBlog.slug %>"
            method="post"
            novalidate
          >
            <p>
              <%-singleBlog.user.firstname %> <%-singleBlog.user.lastname %>
            </p>
            <div class="mb-3">
              <label class="form-label" for="title"
                >Write your article title</label
              >
              <input
                required
                maxlength="255"
                minlength="5"
                class="form-control"
                type="text"
                name="title"
                id="title"
                value="<%- singleBlog.title %>"
              />

              <div class="valid-feedback">Title ok!</div>

              <div class="invalid-feedback">
                <em>Max chars: 255</em><br />
                <em>Min chars: 5</em><br />
                <em>Title required</em>
              </div>
            </div>

            <div class="mb-3">
              <label for="image" class="form-label">Image URL path</label>
              <input
                required
                maxlength="21844"
                minlength="5"
                class="form-control"
                type="text"
                name="image"
                id="image"
                value="<%- singleBlog.image %>"
              />

              <div class="valid-feedback">Imáge ok!</div>
              <div class="invalid-feedback">
                <em>Must be an url image path</em> <br />
                <em>Max chars: 21844</em> <br />
                <em>Min chars: 5</em>
              </div>
            </div>

            <div id="tableroDeFormato">
              <span id="parrafo"><i class="fas fa-code"></i> Párrafo</span>
              <span id="header"><i class="fas fa-heading"></i> Sub Titulo</span>
              <span id="unorderedList"
                ><i class="fas fa-list"></i> Unordered list</span
              >
              <span id="orderedList"
                ><i class="fas fa-list-ol"></i> Ordered list</span
              >
            </div>

            <div class="mb-3">
              <label class="form-label" for="content">Write your article</label>
              <textarea
                class="form-control"
                name="content"
                id="content"
                cols="30"
                rows="20"
                required
                maxlength="21844"
                minlength="5"
              >
<%- singleBlog.content %></textarea
              >

              <div class="valid-feedback">Content ok!</div>
              <div class="invalid-feedback">
                <em>Máximos carácteres 21844</em>
                <br />
                <em>Minimos carácteres 5</em>
                <br />
                <em>Requerido</em>
              </div>
            </div>

            <div id="resumeForm" class="mb-3">
              <label class="form-label" for="resume"
                >Write a resume of your article</label
              >
              <br />
              <textarea
                class="form-control"
                name="resume"
                id="resume"
                cols="5"
                rows="5"
                required
                maxlength="255"
                minlength="5"
              >
<%- singleBlog.resume %></textarea
              >
              <em>This resume will be displayed on the main screen</em>

              <div class="valid-feedback"><em>Resume ok!</em></div>

              <div class="invalid-feedback">
                <em>Máximos carácteres 255</em>
                <br />
                <em>Minimos carácteres 5</em>
                <br />
                <em>
                  Required. Kindly write your resume. It will be displayed on
                  main screen!
                </em>
              </div>
            </div>

            <div class="mb-3">
              <button class="btn btn-primary" type="submit">
                Update Article
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
    <% } %>
    <!--  -->
    <%- include("partials/footer") %>

    <!-- JS bootstrap -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
      crossorigin="anonymous"
    ></script>

    <script>
      // Example starter JavaScript for disabling form submissions if there are invalid fields
      (function () {
        "use strict";

        // Fetch all the forms we want to apply custom Bootstrap validation styles to
        var forms = document.querySelectorAll(".needs-validation");

        // Loop over them and prevent submission
        Array.prototype.slice.call(forms).forEach(function (form) {
          form.addEventListener(
            "submit",
            function (event) {
              if (!form.checkValidity()) {
                event.preventDefault();
                event.stopPropagation();
              }

              form.classList.add("was-validated");
            },
            false
          );
        });
      })();
    </script>
    <script>
      window.addEventListener("load", start);

      function start() {
        document
          .getElementById("parrafo")
          .addEventListener("click", handleParrafo);
        document
          .getElementById("header")
          .addEventListener("click", handleHeader);
        document
          .getElementById("unorderedList")
          .addEventListener("click", handleUnordered);
        document
          .getElementById("orderedList")
          .addEventListener("click", handleOrdered);
      }

      const textArea = document.getElementById("content");
      function handleParrafo() {
        textArea.value += "<p> </p> \n";
      }
      function handleHeader() {
        textArea.value += "<h3> </h3> \n";
      }
      function handleUnordered() {
        textArea.value += "<ul>\n  <li> </li> \n</ul> \n";
      }
      function handleOrdered() {
        textArea.value += "<ol>\n  <li> </li> \n</ol> \n";
      }
    </script>
  </body>
</html>
