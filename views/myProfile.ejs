<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Lomo Blog - Profle</title>
    <link rel="stylesheet" href="/css/myProfile.css" />
    <link rel="stylesheet" href="/css/navbar.css" />
    <link rel="stylesheet" href="/css/footer.css" />
    <link rel="icon" type="image/x-icon" href="/img/favicon.ico" />

    <!-- Bootstrap css -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
    <!-- Fontawesome CDN -->
    <link
      rel="stylesheet"
      href="https://use.fontawesome.com/releases/v5.15.4/css/all.css"
      integrity="sha384-DyZ88mC6Up2uqS4h/KRgHuoeGwBcD4Ng9SiP4dIRy0EXTlnuz47vAwmeGwVChigm"
      crossorigin="anonymous"
    />
    <%- include("partials/googleAnalytics") %>
  </head>
  <body>
    <%- include("partials/navbar") %>

    <div class="container">
      <div class="row">
        <div
          class="col-xl-2 d-flex flex-column justify-content-center"
          id="profileOptions"
        >
          <div class="text-center">
            <a href="#">See my api Key</a><br />
            <a href="#">See my level</a><br />
            <a href="/admin/delete/<%- user.id %>">Delete my acount</a>
          </div>
        </div>

        <div
          class="col-xl-6 d-flex flex-column justify-content-center text-center"
        >
          <p>You have created: 123123 articles</p>
          <p>You have commented: 123123 articles</p>
          <p>You have seen: 1233 articles</p>
        </div>
        <div id="userInfo" class="col-xl-4">
          <div id="profileImgContainer">
            <img
              src="https://www.computerhope.com/jargon/g/guest-user.jpg"
              alt="perfil picture"
            />
          </div>

          <div class="text-center">
            <h4><%- user.firstname %> <%- user.lastname %></h4>
            <!--  -->
            <% if (user.roleId === 1) { %>
            <!--  -->
            <p>Admin</p>
            <em><strong>You are allowed to:</strong></em>
            <em>Create Articles</em>
            <em>Delete Articles</em>
            <em>Comment Articles</em>
            <em>Update Articles</em>
            <em>Delete Users</em>
            <!--  -->
            <% } %>
            <!--  -->
            <% if (user.roleId === 2) { %>
            <!--  -->
            <p>Editor</p>
            <em><strong>You are allowed to:</strong></em>
            <em>Create Articles</em>
            <em>Delete Your own Articles</em>
            <em>Comment Articles</em>
            <em>Update Articles</em>
            <% } %>
            <!--  -->
            <% if (user.roleId === 3) { %>
            <p>Writer</p>
            <em><strong>You are allowed to:</strong></em>
            <em>Create Articles</em>
            <em>Delete Your own Articles</em>
            <em>Comment Articles</em>
            <em>Update Your own Articles</em>
            <% } %>
            <!--  -->
            <% if (user.roleId === 4) { %>
            <p>Lector</p>
            <em><strong>You are allowed to: </strong></em>
            <em>Comment Articles</em>
            <% } %>
          </div>
          <!--  -->
        </div>
      </div>
    </div>

    <%- include("partials/footer") %>

    <!-- JS bootstrap -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
