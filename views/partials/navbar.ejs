<header>
  <nav class="navbar navbar-expand-lg navbar-dark">
    <div class="container">
      <a id="home" class="navbar-brand" href="/">Federico Trotta</a>
      <button
        class="navbar-toggler"
        type="button"
        data-bs-toggle="collapse"
        data-bs-target="#navbarTogglerDemo02"
        aria-controls="navbarTogglerDemo02"
        aria-expanded="false"
        aria-label="Toggle navigation"
      >
        <i class="fas fa-paw"></i>
      </button>
      <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="/">
              <i class="fas fa-home"></i> Home</a
            >
          </li>

          <% if (user) { %>
          <li class="nav-item">
            <a
              class="nav-link active"
              aria-current="page"
              href="/admin/myProfile"
              ><i class="fas fa-user"></i> Profile</a
            >
          </li>

          <!-- --Admin------------------------ -->
          <% if (user.roleId != 4) { %>
          <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="/admin"
              ><i class="fas fa-key"></i> Admin</a
            >
          </li>
          <% } %>
          <!-- ---Admin--------------------- -->

          <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="/logOut"
              ><i class="fas fa-door-open"></i> Log Out</a
            >
          </li>

          <% } else { %>

          <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="/login"
              ><i class="fas fa-sign-in-alt"></i> Log In</a
            >
          </li>
          <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="/signup"
              ><i class="fas fa-user-plus"></i>Sign Up</a
            >
          </li>
          <% } %>

          <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="/about"
              ><i class="fas fa-briefcase"></i> About</a
            >
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <h1><em>Lomo Blog </em><i class="fas fa-dog"></i></h1>
        <% if (user) { %>
        <em>Logueado como: <%- user.firstname %></em>
        <% }%>
      </div>
    </div>
  </div>
</header>
